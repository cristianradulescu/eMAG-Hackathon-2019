<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>Worklog</title>

    <!-- Bootstrap core CSS -->
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
        body {
            padding-top: 5rem;
        }
        .starter-template {
            padding: 3rem 1.5rem;
            text-align: center;
        }
    </style>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" integrity="sha256-zmfNZmXoNWBMemUOo1XUGFfc0ihGGLYdgtJS3KCr/l0=" crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>

    <main role="main" class="container-fluid">

        <table class="table table-bordered table-sm table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Event type</th>
                    <th>Task</th>
                    <th>Duration</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>

                {{ include('worklog/worklogRow.html.twig', { worklog: logged }) }}
                {{ include('worklog/worklogRow.html.twig', { worklog: meetings }) }}
                {{ include('worklog/worklogRow.html.twig', { worklog: commits }) }}
                <script>
                    $(document).ready(function () {
                        $('[class="remove-worklog"]').on('click', function () {
                            $(this).parents('tr').hide('fade');
                        })
                    })
                </script>
                <tr>
                    <td colspan="4"><strong>Total: {{ totalLogged }}</strong></td>
                </tr>
            </tbody>
        </table>

        <div>
            <div class="alert alert-success" style="display: none" id="alert-worklog-updated">Your worklog was updated.</div>
            <button class="btn btn-success" onclick="$('#alert-worklog-updated').show()">OK</button>
            <button class="btn btn-danger">Cancel</button>
        </div>

    </main><!-- /.container -->

</body>
</html>
